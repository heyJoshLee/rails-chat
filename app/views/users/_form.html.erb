<%= render "shared/errors", obj: @user%>

<div class="ui two column centered grid">
  <%= form_with(model: @user, local: true, class: "ui form column") do |f|%>
  <div class="field">
    <%= f.label :username %> <br/>
    <%= f.text_field :username, class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>

  <div class="field">
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "ui primary button")%>
  </div>

  <% end %>
</div>
